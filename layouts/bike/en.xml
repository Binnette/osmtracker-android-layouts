<layouts>
    <!-- Main layout, first to be displayed -->
    <layout name="root">
        <!-- Special action buttons -->
        <row>
            <button type="voicerec" icon="bike_icons/voicerec.png"/>
            <button type="picture" icon="bike_icons/picture.png"/>
            <button type="textnote" icon="bike_icons/textnote.png"/>
        </row>

        <row>
            <!-- amenity=drinking_water -->
            <button type="tag" label="Drinking water" icon="bike_icons/drinking_water.png" />
            <!-- amenity=toilets -->
            <button type="tag" label="Toilets" icon="bike_icons/toilets.png" />
            <!-- tourism=picnic_site -->
            <button type="tag" label="Picnic table" icon="bike_icons/picnic_table.png" />
        </row>

        <row>
            <!-- tourism=viewpoint -->
            <button type="tag" label="Viewpoint" icon="bike_icons/viewpoint.png" />
            <!-- amenity=bench -->
            <button type="tag" label="Bench" icon="bike_icons/bench.png" />
            <!-- historic=wayside_cross -->
            <button type="tag" label="Wayside cross" icon="bike_icons/wayside_cross.png" />
        </row>

        <!-- Primary POI category buttons -->
        <row>
            <button type="page" label="Bike POIs" icon="bike_icons/bike.png" targetlayout="bicycle"/>
            <button type="page" label="Misc POIs" icon="bike_icons/misc.png" targetlayout="misc"/>
        </row>
    </layout>
   
    <!-- Bicycle-related POIs layout -->
    <layout name="bicycle">
        <row>
            <!-- amenity=bicycle_repair_station + service:bicycle:pump=yes -->
            <button type="tag" label="Bike pump" icon="bike_icons/bike_pump.png" />
            <!-- amenity=bicycle_repair_station -->
            <button type="tag" label="Bike repair station" icon="bike_icons/bike_repair_station.png" />
            <!-- amenity=charging_station + bicycle=yes -->
            <button type="tag" label="Charging station" icon="bike_icons/bike_charging_station.png" />
        </row>
        <row>
            <!-- shop=bicycle -->
            <button type="tag" label="Bicycle shop" icon="bike_icons/bike_shop.png" />
            <!-- amenity=bicycle_rental -->
            <button type="tag" label="Bicycle rental" icon="bike_icons/bike_rental.png" />
            <!-- amenity=monitoring_station + monitoring:bicycle=yes -->
            <button type="tag" label="Bike monitoring station" icon="bike_icons/bike_monitoring_station.png" />
        </row>
        <row>
            <!-- barrier=bus_trap -->
            <button type="tag" label="Bus trap" icon="bike_icons/bus_trap.png" />
            <!-- cycleway=asl -->
            <button type="tag" label="Advanced Stop Line" icon="bike_icons/advanced_stop_line.png" />
            <!-- barrier=cycle_barrier -->
            <button type="tag" label="Cycle barrier" icon="bike_icons/cycle_barrier.png" />
        </row>
        <row>
            <!-- highway=cycleway -->
            <button type="tag" label="Cycleway start" icon="bike_icons/cycleway_start.png" />
            <!-- highway=cycleway -->
            <button type="tag" label="Cycleway end" icon="bike_icons/cycleway_end.png" />
        </row>
    </layout>
    
    <!-- Miscellaneous POIs layout -->
    <layout name="misc">
        <row>
            <!-- amenity=shelter -->
            <button type="tag" label="Shelter" icon="bike_icons/shelter.png" />
        </row><row>
            <!-- tourism=information information=map -->
            <button type="tag" label="Map" icon="bike_icons/map.png" />
        </row><row>
            <!-- leisure=playground -->
            <button type="tag" label="Playground" icon="bike_icons/playground.png" />
        </row>
    </layout>
</layouts>
